-- Replace the existing GUI library with a new one
local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/preztel/AzureLibrary/master/uilib.lua"))()

-- Create a new GUI window with a red theme
local Window = Library:CreateWindow("Made By Quec", UDim2.new(0, 400, 0, 300))
Window:AddImage("rbxassetid://6996357307", UDim2.new(0.5, -100, 0, 50))
Window:AddLabel("Main", "Camlock", {TextSize = 24, TextColor = Color3.fromRGB(255, 0, 0)})
Window:AddSwitch("Enable", function(enabled)
    getgenv().Enabled = enabled
end)

-- Add dropdown for HitPart selection
local hitPartDropdown = Window:AddDropdown("HitPart", {"Head", "HumanoidRootPart", "UpperTorso", "LowerTorso", "Penis"}, function(selectedOption)
    getgenv().RecurringPoint = selectedOption
end)
hitPartDropdown:SetBackgroundColor(Color3.fromRGB(255, 0, 0))
hitPartDropdown:SetTextColor(Color3.fromRGB(255, 255, 255))

-- Add textboxes for customization
Window:AddTextbox("Cam Prediction", function(text)
    getgenv().PredictionAmount = tonumber(text)
end)
Window:AddTextbox("Smoothness", function(text)
    getgenv().AimbotStrengthAmount = tonumber(text)
end)
Window:AddTextbox("Radius", function(text)
    getgenv().Radius = tonumber(text)
end)

-- Set default values for settings
getgenv().RecurringPoint = "UpperTorso"
getgenv().AimbotStrengthAmount = 0.405
getgenv().PredictionAmount = 10
getgenv().Radius = 50
getgenv().Enabled = false
-- Inside the RenderStepped event loop where the aimbot is locked onto the target
RS.RenderStepped:Connect(function()
    update()
    if AimlockState == true then
        if Victim ~= nil then
            -- Check if the locked target's character exists and is alive
            if Victim.Character and Victim.Character:FindFirstChild("Humanoid") and Victim.Character.Humanoid.Health > 0 then
                Camera.CFrame = CFrame.new(Camera.CFrame.p, Victim.Character[getgenv().AimPart].Position + Victim.Character[getgenv().AimPart].Velocity * getgenv().Prediction)
            else
                -- Automatically unlock aimbot if the target dies
                Victim = nil
                Locked = false
            end
        end
    end
end)
